<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Community</title>
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome Icons -->
    <link href="~/Content/uistuff/plugins/fontawesome-free/css/all.css" rel="stylesheet" />
    <!-- Theme style -->
    <link href="~/Content/uistuff/dist/css/adminlte.css" rel="stylesheet" />
    <style>

        body
        {
            margin:0;
            padding:0;
        }
        li p{
            display: block;
            color: white;
            text-align: center;
            padding: 10px 12px;
            width: 100%;
            text-decoration: none;
            font-size: 18px;
            margin: 0;
            border-radius: 3px;
        }

            li a{
                display : block;
                color: white;
                text-align: center;
                padding : 10px 12px;
                width:100%;
                text-decoration : none;
                font-size : 15px;
                margin:0;
                border-radius:3px;
            }
            li a:hover
            {
                background-color: rgb(235 222 222 / 0.17);
                color:black;
            }
    </style>


</head>

<body class="hold-transition sidebar-mini">
    <div class="wrapper">

        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>

            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Sidebar -->
            <div class="sidebar">



                <!-- Sidebar user panel-->

                <div class="user-panel mt-3 pb-3 mb-3 d-flex">

                    <li class="info">
                        <p style="color:aliceblue">&ensp;&ensp;@TempData.Peek("UserEmail")</p>
                    </li>
                </div>

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">

                        <li>

                            @Html.ActionLink("Home", "ResidentDashboard", "Resident", new { @class = "button4" })
                        </li>
                        <li>
                            @Html.ActionLink("Add Visitors", "AddVisitor", "Resident", new { @class = "button4" })
                        </li>
                        <li>
                            @Html.ActionLink("Manage Visitors", "ShowVisitors", "Resident", new { @class = "button4" })
                        </li>
                        <li>
                            @Html.ActionLink("Post a Notice", "AddNotice", "Resident", new { @class = "nav-link" })
                        </li>
                        <li>
                            @Html.ActionLink("Manage your Posts", "ShowPosts", "Resident", new { @class = "nav-link" })
                        </li>

                        <li>
                            @Html.ActionLink("Raise a Complaint", "AddComplaint", "Resident", new { @class = "nav-link" })
                        </li>
                        <li>
                            @Html.ActionLink("Manage Complaints", "ShowComplaints", "Resident", new { @class = "nav-link" })
                        </li>
                        <li>
                            @Html.ActionLink("Book a Service", "AddService", "Resident", new { @class = "nav-link" })
                        </li>
                        <li>
                            @Html.ActionLink("Manage Booked Services", "ShowServices", "Resident", new { @class = "nav-link" })
                        </li>
                        <li>
                            @Html.ActionLink("friend or family List", "ShowFaF", "Resident", new { @class = "nav-link" })
                        </li>
                        <li>
                            @Html.ActionLink("Manage Wallet/Payment", "RechargeWallet", "Resident", new { @class = "nav-link" })
                        </li>
                        <li>
                            @Html.ActionLink("Logout", "Logout", "Resident", new { @class = "nav-link" })
                        </li>

                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <!-- /.content-header -->
            <!-- Main content -->
            <div style="margin-left:15px;margin-right:15px;margin-top:15px;">
                @RenderBody()
                @RenderSection("scripts", required: false)
            </div>

            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <!-- Main Footer -->
        <footer class="main-footer">
            <!-- To the right -->
            <div class="float-right d-none d-sm-inline">
                Community Gate
            </div>
            <!-- Default to the left -->
            <strong>Logged in as Resident</strong>
        </footer>
    </div>


    <!-- REQUIRED SCRIPTS -->
    <!-- jQuery -->
    <script src="~/Content/uistuff/plugins/jquery/jquery.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/Content/uistuff/plugins/bootstrap/js/bootstrap.js"></script>
    <!-- AdminLTE App -->
    <script src="~/Content/uistuff/dist/js/adminlte.js"></script>
</body>

</html>