@model CommunityGateClient.Models.Complaints

@{
    ViewData["Title"] = "AddComplaint";
    Layout = "~/Views/Shared/_ResidentLayout.cshtml";
}

<div class="col-md-6">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Raise a Complaint</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body">
            <div class="form-group">
                <form asp-action="AddComplaint">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                    <div class="form-group">
                        <label class="control-label">Complaint Letter</label>
                        <textarea asp-for="ComplaintRegarding" class="form-control"></textarea>
                        <span asp-validation-for="ComplaintRegarding" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Submit Complaint" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

