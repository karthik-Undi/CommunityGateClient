@model CommunityGateClient.Models.Complaints

@{
    ViewData["Title"] = "AddComplaint";
    Layout = "~/Views/Shared/_ResidentLayout.cshtml";
}

<h1>AddComplaint</h1>

<h4>Complaints</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddComplaint">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
          
            <div class="form-group">
                <label asp-for="ComplaintRegarding" class="control-label"></label>
