@model CommunityGateClient.Models.Visitors

@{
    ViewData["Title"] = "UpdateVisitor";
    Layout = "~/Views/Shared/_ResidentLayout.cshtml";
}

<div class="col-md-6">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Edit Visitor</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <div class="card-body">
            <div class="form-group">
                <form asp-action="UpdateVisitor">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="VisitorName" class="control-label"></label>
                        <input asp-for="VisitorName" class="form-control" />
                        <span asp-validation-for="VisitorName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="VisitorResaon" class="control-label"></label>
                        <input asp-for="VisitorResaon" class="form-control" />
                        <span asp-validation-for="VisitorResaon" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="VisitStartTime" class="control-label"></label>
                        <input asp-for="VisitStartTime" class="form-control" />
                        <span asp-validation-for="VisitStartTime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="VisitEndTime" class="control-label"></label>
                        <input asp-for="VisitEndTime" class="form-control" />
                        <span asp-validation-for="VisitEndTime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>
