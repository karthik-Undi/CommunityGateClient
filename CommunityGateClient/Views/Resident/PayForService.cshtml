@model CommunityGateClient.Models.Payments

@{
    ViewData["Title"] = "PayForService";
    Layout = "~/Views/Shared/_ResidentLayout.cshtml";
}

<div class="col-md-6">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Delete Visitor</h3>

        </div>
        <div class="card-body">
            <div class="form-group">
                <dl class="row">
                    <dt class="col-sm-2">
                        <p>Payment For Service Type</p>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.PaymentFor)
                    </dd>
                    <dt class="col-sm-2">
                        <p>Amount</p>
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Amount)
                    </dd>
                </dl>

                <form asp-action="PayForService">
                    <input type="submit" value="Pay" class="btn btn-danger" />
                </form>
                <div>
                    @ViewBag.Message
                </div>
            </div>

        </div>
    </div>
</div>
