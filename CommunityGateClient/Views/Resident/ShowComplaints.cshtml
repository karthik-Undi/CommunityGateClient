@model IEnumerable<CommunityGateClient.Models.Complaints>

    @{
        ViewData["Title"] = "ShowComplaints";
        Layout = "~/Views/Shared/_ResidentLayout.cshtml";
    }

    <div class="card">

        <!-- /.card-header -->

        <div class="card-header border-transparent">
            <h3 class="card-title">Visitor Log</h3>

            <div class="card-tools">

                <input id="search" type="text" placeholder="Search name">

                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                    <i class="fas fa-minus"></i>
                </button>
            </div>
        </div>
        <!-- /.card-header -->





        <div class="card-body">
            <div id="example1_wrapper" class="dataTables_wrapper dt-bootstrap4">
                <div class="row">
                    <div class="col-sm-12">
                        <table id="example1" class="table table-bordered table-striped dataTable dtr-inline" role="grid" aria-describedby="example1_info">
                            <tr>
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ComplaintId)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ResidentId)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ComplaintRegarding)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ComplaintStatus)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ComplaintId)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ResidentId)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ComplaintRegarding)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ComplaintStatus)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                                            @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                                            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
    $("#search").on("keyup", function () {
        var enteredText = $(this).val();
        $("table tr").each(function (results) {
            if (results !== 0) {
                var id = $(this).find("td:nth-child(1)").text();
                if (id.indexOf(enteredText) !== 0 && id.toLowerCase().indexOf(enteredText.toLowerCase()) < 0) {
                    $(this).hide();
                }
                else {
                    $(this).show();
                }
            }
        });

    });</script>
