@model CommunityGateClient.Models.Employees

@{
    ViewData["Title"] = "EmployeeWallet";
    Layout = "~/Views/Shared/_UtilityLayout.cshtml";
}




<!-- small box -->
<div style="width:1200px">
    <div style="float:left;margin-left:35px;margin-right:20px">
        <div class="small-box bg-success" style="width:555px;height:300px">
            <div class="inner">
                <div class="card-body">
                    <p style="font-size:32px;">Wallet Balance</p>
                    <p style="font-size:150px">₹ @Model.EmployeeWallet</p>

                </div>
            </div>
        </div>
    </div>
    <div style="float:right;margin-left:20px">
        <div class="small-box" style="width:555px;height:300px;background-color:powderblue">
            <div class="inner">
                <div class="card-body">

                    <form asp-action="EmployeeWallet">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <p style="font-size:18px;">Withdraw Amount</p>

                            <input asp-for="EmployeeWallet" class="form-control" />
                            <span asp-validation-for="EmployeeWallet" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <p style="font-size:18px;">Mode of Transfer</p>
                            <select class="form-control" required>
                                <option value="Utility">
                                    Credit Card/Debit card
                                </option>
                                <option value="Sanitation">
                                    Netbanking
                                </option>
                                <option value="Utility">
                                    UPI
                                </option>
                            </select>
                        </div>
                        <div class="form-group">

                            <input type="submit" value="Transfer to Bank" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
                <div class="icon">
                    <i class="ion ion-person-add"></i>
                </div>
            </div>
        </div>
    </div>
</div>